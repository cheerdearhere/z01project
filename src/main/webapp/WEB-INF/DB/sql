#제품 DB 시퀀스
CREATE SEQUENCE PTPRODUCT_SEQ NOCACHE;

#제품DB
CREATE TABLE PTPRODUCT
( PID NUMBER (6) PRIMARY KEY
, PTYPE VARCHAR2(30) NOT NULL
, PNAME VARCHAR2(200) NOT NULL
, PPRICE NUMBER(6) NOT NULL
, PQUANTY NUMBER(6) NOT NULL
, PCONTENT VARCHAR2(4000)
, PPHOTO VARCHAR2(200)
, PBOARD VARCHAR2(30)
, PSTATE VARCHAR2(30) DEFAULT 'true'
, PDATE DATE DEFAULT (sysdate)
, PCOLOR VARCHAR2(20)
, PSIZE VARCHAR2(20)
, PHIT NUMBER(10)
);

#유저DB
CREATE TABLE USER_ALL 
(
  UEMAIL VARCHAR2(100) NOT NULL 
, UNAME VARCHAR2(30) NOT NULL 
, UDATE DATE DEFAULT SYSDATE 
, UADDRESS VARCHAR2(300) 
, UPHONE1 VARCHAR2(100) 
, UPHONE2 VARCHAR2(100) 
, UAUTH VARCHAR2(100) DEFAULT 'ROLE_USER' 
, UPW VARCHAR2(200) NOT NULL
, CONSTRAINT USER_ALL_PK PRIMARY KEY 
  (
    UEMAIL 
  )
  ENABLE 
);

#리뷰게시판 DB 시퀀스
CREATE SEQUENCE RBOARD_SEQ NOCACHE;

#리뷰게시판 DB
CREATE SEQUENCE REVIEWBOARD_SEQ NOCACHE;

CREATE TABLE REVIEWBOARD
(RBID NUMBER(10) PRIMARY KEY
, PID VARCHAR2(50)
, RPHOTO VARCHAR2(200)
, RTITLE VARCHAR2(100)
, RCONTENT VARCHAR(300)
, RGOOD VARCHAR2(10)
, RDATE DATE DEFAULT (sysdate)
, RGROUP NUMBER(10)
, RSTEP NUMBER(20)
, RINDENT NUMBER(20)
, UEMAIL VARCHAR(100)
);
 
 #첫화면 관리 DB
CREATE TABLE HMPAGE
(HMDATE DATE DEFAULT sysdate
, HMSLIDE0 VARCHAR2(100) NOT NULL
, HMSLIDE1 VARCHAR2(100) NOT NULL
, HMSLIDE2 VARCHAR2(100) NOT NULL
, HMMAIN VARCHAR2(100) NOT NULL
, HMINSTAR VARCHAR2(100) 
, HMYOUTUBE VARCHAR2(100)
);
