#LOOKBOOK DB--아직 미구현
CREATE TABLE LOOKBOOK (
    LID VARCHAR2(30) NOT NULL PRIMARY KEY,
    LDATE TIMESTAMP,
    LDATEEND DATE,
    LIMG VARCHAR2(100), 
    LLINK VARCHAR2(300)
 );
